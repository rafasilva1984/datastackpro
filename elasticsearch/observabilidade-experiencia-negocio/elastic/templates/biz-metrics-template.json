{
  "index_templates": [
    {
      "name": "biz-metrics-template",
      "index_template": {
        "index_patterns": [
          "biz-metrics-*"
        ],
        "data_stream": {},
        "template": {
          "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0
          },
          "mappings": {
            "dynamic": "strict",
            "properties": {
              "@timestamp": {
                "type": "date"
              },
              "active_users": {
                "type": "integer"
              },
              "transactions": {
                "type": "integer"
              },
              "errors_checkout": {
                "type": "integer"
              },
              "avg_ticket": {
                "type": "scaled_float",
                "scaling_factor": 100
              },
              "revenue": {
                "type": "scaled_float",
                "scaling_factor": 100
              },
              "predicted_revenue_without_errors": {
                "type": "scaled_float",
                "scaling_factor": 100
              },
              "loss_due_to_errors": {
                "type": "scaled_float",
                "scaling_factor": 100
              },
              "conversion_rate": {
                "type": "half_float"
              },
              "service": {
                "type": "keyword"
              },
              "is_anomaly": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  ]
}